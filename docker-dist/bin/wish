#!/bin/bash
##
##
##

cd /www
source /www/boot.sh

__wish-usage() {

  case $1 in

    plug)

      echo "1: install all plugins from file (/www/plugs): $0 plug install"
      echo "2: update all plugins from file (/www/plugs): $0 plug update"
      echo "3: install given plugin: $0 plug NAME GIT-URL"

    ;;

    '')

      echo "available subcommands:"
      echo "  - plug"

    ;;

  esac
}

__wish-plug-update-git() {

  for PLUG in $(ls -d1 /www/app/plug/*)
  do

      git --git-dir=${PLUG}/.git --work-tree=${PLUG} pull -f

  done

}

log() {
  echo "WISH:$(date): $@" >> /tmp/wish.log
}

COMMAND=$1
shift

case $COMMAND in

  '')

    __wish-usage

  ;;

  run)

    log "run $@"
    $@

  ;;

  log)

    case $1 in

      '')

          tail -f /tmp/wish.log

      ;;

      *)

          log $@

      ;;

    esac

  ;;

  plug|pl*)

    shift;
    NAME=$1

    if [[ -z $NAME ]]
    then
        __wish-usage plug
        exit 1
    fi

    case $NAME in install)

      PLUGFILE=${PLUGFILE:-/www/app/plugs}

      if [[ -f ${PLUGFILE} ]]
      then

        while read PLUG
        do

          if [[ $(echo $PLUG | grep -q ^#) ]]
          then
              continue
          fi

          NAME=$(echo ${PLUG} | cut -f1 -d',')
          GITURL=$(echo ${PLUG} | cut -f2 -d',')
          BRANCH=$(echo ${PLUG} | cut -f3 -d',')
          OPTS=$(echo ${PLUG} | cut -f4 -d',')

          BRANCH=$BRANCH wish plug $NAME $GITURL

        done < ${PLUGFILE}

        exit

      fi

    ;;
    esac

    case $NAME in update)

        __wish-plug-update-git
        exit

    ;;
    esac

    if [[ $FORCE ]] || [[ $WISH_FORCE ]]
    then

      rm -rf /www/app/plug/${NAME}

    fi

    GITSRC=$2

    if [[ -z $GITSRC ]]
    then

      __wish-usage plug
      exit 1

    fi

    if [[ $BRANCH ]]
    then

      BRANCH="-b ${BRANCH}"

    fi

    git clone ${GITOPTS} ${BRANCH} ${GITSRC} /www/app/plug/${NAME}

    if [[ $GITRM ]]
    then

      rm -rf /www/app/plug/${NAME}/.git

    fi   

  ;;

esac
