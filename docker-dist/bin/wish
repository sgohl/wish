#!/bin/bash
##
##
##

__wish-usage() {

  case $1 in

    plug)

      echo "$0 plug NAME [git-src]"

    ;;

    '')

      echo "$0 (plug|...) OPTIONS"

    ;;

  esac
}

case $1 in

  plug|pl*)

    shift;
    NAME=$1

    if [[ -z $NAME ]]
    then

      __wish-usage plug
      exit 1

    fi

    if [[ -d /www/plug/${NAME} ]]
    then

      cp -Rf /www/plug/${NAME} /www/app/plug/

    else

      GITSRC=$2

      if [[ -z $GITSRC ]]
      then

        __wish-usage plug
        exit 1

      fi

      git clone ${GITSRC} /www/app/plug/${NAME}

    fi

  ;;

esac
